{
  "name": "dogsbook",
  "version": "1.0.0",
  "description": "Social network of people who love dogs. ",
  "main": "dist/app.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/app.js",
    "start:dev": "nodemon",
    "cm": "git-cz",
    "commitmsg": "validate-commit-msg",
    "release": "standard-version",
    "precommit": "lint-staged",
    "build:dev-image": "docker build . -t indigitall/${npm_package_name}:${npm_package_version}-$(git rev-parse --short HEAD) --no-cache"
  },
  "keywords": [
    "social",
    "network",
    "dogs",
    "friends",
    "love"
  ],
  "author": "Yosnier Samon M.",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "argon2": "^0.26.0",
    "celebrate": "^11.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "geoip-lite": "^1.4.0",
    "mailchecker": "^3.3.4",
    "pg": "^7.18.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.6.2",
    "typedi": "^0.8.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^13.7.1",
    "@types/pg": "^7.14.1",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "commitizen": "^3.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "standard-version": "^5.0.2",
    "validate-commit": "^3.4.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "git add -f"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "repository": {
    "url": "https://yosamac@bitbucket.org/yosamac/dogsbook.git",
    "type": "git"
  }
}
